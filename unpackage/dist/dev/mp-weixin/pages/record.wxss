.rc {
  min-height: 100vh;
  background-color: #F3F4F5;
  padding: 32rpx;
  box-sizing: border-box;
}
.rc .olcEmpty {
    text-align: center;
    padding-top: 176rpx;
}
.rc .olcEmpty .oe1 {
      width: 220rpx;
      height: auto;
}
.rc .olcEmpty .oe2 {
      color: #C0C4CC;
      font-size: 28rpx;
      margin-top: 40rpx;
}
.rc .rcList {
    border-radius: 12rpx;
    overflow: hidden;
}
.rc .rcList .rcItem {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      height: 100rpx;
      -webkit-box-align: stretch;
      -webkit-align-items: stretch;
              align-items: stretch;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      line-height: 100rpx;
      color: #fff;
}
.rc .rcList .rcItem .rce {
        width: 25%;
        text-align: center;
        font-size: 30rpx;
        border-right: 2rpx solid #fff;
        box-sizing: border-box;
}
.rc .rcList .rcItem .rce .rceIcon {
          width: 40rpx;
          height: 40rpx;
          border-radius: 50%;
          margin-bottom: 10rpx;
}
.rc .rcList .rcItem .rce:last-child {
        border-right: none;
}
.rc .rcList .rcItem1 {
      background-color: #4395c5;
}
.rc .rcList .rcItem2 {
      color: #606266;
}
.rc .rcList .rcItem2 .rce {
        font-size: 28rpx;
        position: relative;
}
.rc .rcList .rcItem2 .rce .rceName {
          font-size: 26rpx;
          height: 36rpx;
          line-height: 36rpx;
          position: absolute;
          bottom: 10rpx;
          width: 100%;
          text-align: center;
          text-overflow: ellipsis;
          overflow: hidden;
          white-space: nowrap;
}
.rc .rcList .rcItem2:nth-child(even) {
      background-color: #fff;
}
.rc .rcList .rcItem2:nth-child(odd) {
      background-color: #EDFCF7;
}
.rc .rcList .rcMore {
      background-color: #fff;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      color: #4395c5;
      font-size: 30rpx;
      line-height: 90rpx;
}
.rc .rcList .rcMore .rcm1img {
        width: 28rpx;
        height: auto;
        margin-left: 10rpx;
}

